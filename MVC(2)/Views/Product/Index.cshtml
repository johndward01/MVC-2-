
@model IEnumerable<Product>

<div class="container text-white-50 mucho-margin-top">
    <div class="flex-row">
        <h1 class="display-3 text-white">Products</h1>
    </div>


    <br />
    <table class="table">
        <tr>
            <th>ProductID</th>
            <th>Name</th>
            <th>Price</th>
            <th>CategoryID</th>
            <th>OnSale</th>
            <th>StockLevel</th>
        </tr>

        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.CategoryID</td>
                <td>@product.OnSale</td>
                <td>@product.StockLevel</td>
            </tr>
        }
    </table>
</div>